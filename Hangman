#include <iostream> 
#include <string>
#include <cstdlib>
#include <ctime>
#include <algorithm>
using namespace std;


//Global constants and variables
const int MAX_INCORRECT = 6;
char incorrect[MAX_INCORRECT];
int numIncorrect = 0;
int misses = 0;


void displayHangman() {
	cout << "\n";
	switch (misses) {
	case 0: //none
		cout << "	+---+\n";
		cout << "	|	|\n";
		cout << "		|\n";
		cout << "		|\n";
		cout << "		|\n";
		cout << "		|\n";
		cout << "==========\n";
		break;
	case 1: //Head
		cout << "	+---+\n";
		cout << "	|	|\n";
		cout << "	O	|\n";
		cout << "		|\n";
		cout << "		|\n";
		cout << "		|\n"; 
		cout << "==========\n";
		break;
	
	case 2: //Body
		cout << "	+---+\n";
		cout << "	|	|\n";
		cout << "	O	|\n";
		cout << "	|	|\n";
		cout << "		|\n";
		cout << "		|\n";
		cout << "==========\n";
		break;
	case 3: //Left Arm
		cout << "	+---+\n";
		cout << "	|	|\n";
		cout << "	O	|\n";
		cout << "  /|	|\n";
		cout << "		|\n";
		cout << "		|\n";
		cout << "==========\n";
		break;
	case 4: //Right Arm
		cout << "	+---+\n";
		cout << "	|	|\n";
		cout << "	O	|\n";
		cout << "  /|\\	|\n";
		cout << "		|\n";
		cout << "		|\n";
		cout << "==========\n";
		break;
	case 5: // Left leg
		cout << "	+---+\n";
		cout << "	|	|\n";
		cout << "	O	|\n";
		cout << "  /|\\  |\n";
		cout << "  /	|\n";
		cout << "		|\n";
		cout << "==========\n";
		break;
	case 6: // Right Leg
		cout << "	+---+\n";
		cout << "	|	|\n";
		cout << "	O	|\n";
		cout << "  /|\\  |\n";
		cout << "  / \\	|\n";
		cout << "		|\n";
		cout << "==========\n";
		break;
	}
	
}
